<%= render 'shared/page_title', title: 'Create A New Review' %>
<!--Errors-->
<% if @review.errors.any? %>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-danger">
      <div class="panel-heading">
        <h2 class="panel-title">
          <%= pluralize(@review.errors.count, "error") %>
          prohibited this <%= @review.class %> from being posted:
        </h2>
        <div class="panel-body">
          <ul>
            <% @review.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
<!--Form-->
<div class="row">
  <div class="col-md-12">
    <%= form_for(@review, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :movie %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :movie, class: "form-control", placeholder: "Movie Name", autofocus:true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :name %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :name, class: "form-control", placeholder: "Title of Review", autofocus:true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :description %>
        </div>
        <div class="col-md-8">
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Review goes here" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <%= f.submit class: "btn btn-primary btn-lg btn-xlarge" %>
        </div>
      </div>
    <% end %>
    <div class="col-md-4 col-md-offset-5">
      [ <%= link_to "Return to Reviews", reviews_path %> ]
    </div>
  </div>
</div>