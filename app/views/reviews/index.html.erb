<h1 align= "center">Listing all Reviews</h1>
<hr />

<% @reviews.each do |review| %>
  <div class= "row">
    <div class= "col-md-2">
      <section class= "center">
        
      </section>
    </div>
    <div class= "col-md-8 well">
      <h4><%= review.name %></h4>
      <p><%= truncate(review.description, length: 100) %></p>
      <p>Written by:<%= review.user.name %></p>
      <p>
      <span class= "quiet"><small>Created: <%= time_ago_in_words(review.created_at) %> ago</small></span>
      </p>
    </div>
  </div>

<% end %>